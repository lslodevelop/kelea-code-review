    <!-- ChangeSet 1: Crear tabla -->
    <changeSet id="Creaci贸n de tabla prices" author="Luis L贸pez">
        <createTable tableName="prices">
            <column name="id" type="UUID" defaultValueComputed="RANDOM_UUID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="brand_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="price_list" type="INT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="INT"/>
            <column name="price" type="DECIMAL(10,2)"/>
            <column name="currency" type="VARCHAR(3)"/>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_prices_brand"
                baseTableName="prices"
                baseColumnNames="brand_id"
                referencedTableName="brands"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        <rollback>
            <dropTable tableName="prices"/>
        </rollback>
    </changeSet>

